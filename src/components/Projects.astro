---
import GitHub from "./icons/GitHub.astro";
import NextJS from "./icons/NextJS.astro";
import Tailwind from "./icons/Tailwind.astro";
import React from "./icons/React.astro";
import Node from "./icons/Node.astro";
import Bootstrap from "./icons/Bootstrap.astro";
import Mongo from "./icons/Mongo.astro";
import LinkButton from "./LinkButton.astro";

const TAGS = {
  NEXT: {
    name: "Next.js",
    class: "bg-black text-white",
    icon: NextJS,
  },
  TAILWIND: {
    name: "Tailwind CSS",
    class: "bg-[#003159] text-white",
    icon: Tailwind,
  },
  BOOTSTRAP: {
    name: "Bootstrap CSS",
    class: "bg-[#003159] text-white",
    icon: Bootstrap,
  },
  REACT: {
    name: "React JS",
    class: "bg-[#003159] text-white",
    icon: React,
  },
  EXPRESS: {
    name: "Express JS",
    class: "bg-[#003159] text-white",
    icon: Node,
  },
  MONGODB: {
    name: "Mongo DB",
    class: "bg-[#003159] text-white",
    icon: Mongo,
  },
};
const PROJECTS = [
  {
    title: "LocalTalent - App para contactar servicios de forma segura",
    description:
      "Local Talent es una app que te permite publicar y buscar servicios, hacer match y calificar usuarios. Es un proyecto colaborativo de la plataforma Henry",
    link: "#",
    github: "https://github.com/andresfrei/local-talent",
    image: "/projects/localtalent.webp",
    tags: [TAGS.REACT, TAGS.TAILWIND, TAGS.EXPRESS],
  },
  {
    title: "QuizWiz - App para cuestionarios colectivos",
    description:
      "Aplicación para generar y administrar formularios de recopilación de datos para equipos de trabajo. Proyecto colaborativo en la plataforma NoCountry.",
    github: "https://github.com/andresfrei/s11-12-n-java-next",
    image: "/projects/quizwiz.webp",
    link: "#",
    tags: [TAGS.NEXT, TAGS.TAILWIND],
  },
  {
    title: "Unilink - Clon de Linktree con mejoras",
    description:
      "Aplicación para administrar links estilo Linktree, con la mejora de poder tener varios perfiles propios o delegar perfiles para que lo administre un tercero. Este es un proyecto colectivo de la plataforma NoCountry, dónde la idea, estructura y dirección fueron mis aportes princpales.",
    github: "https://github.com/andresfrei/c13-14-n-node-react",
    image: "/projects/unilink.webp",
    tags: [TAGS.REACT, TAGS.BOOTSTRAP, TAGS.EXPRESS, TAGS.MONGODB],
  },
];
---

<section class="flex flex-col gap-y-16">
  {
    PROJECTS.map(({ image, title, description, tags, link, github }) => (
      <article>
        <h3 class="text-2xl font-semibold text-yellow-800 dark:text-yellow-200 mb-2">
          {title}
        </h3>
        <p class="text-lg mb-4 text-pretty">{description}</p>
        <ul class="flex gap-x-2 flex-row mb-2">
          {tags.map((tag) => (
            <li>
              <span
                class={`flex gap-x-2 rounded-full text-xs ${tag.class} py-1 px-2 `}
              >
                <tag.icon class="size-4" />
                {tag.name}
              </span>
            </li>
          ))}
        </ul>
        <img
          loading="lazy"
          class="rounded shadow-2xl shadow-white/10 aspect-video"
          src={image}
          alt={`Captura de pantalla del proyecto ${image}`}
        />
        <footer class="flex gap-x-4 items-end justify-start mt-4">
          {github && (
            <LinkButton href={github} target="_blank">
              <GitHub class="size-6" />
              Ver código fuente
            </LinkButton>
          )}
          {link && link !== "#" && (
            <LinkButton href={link} target="_blank">
              <svg
                width="24"
                height="24"
                viewBox="0 0 24 24"
                stroke-width="1.5"
                stroke="currentColor"
                fill="none"
                stroke-linecap="round"
                stroke-linejoin="round"
              >
                <>
                  <path stroke="none" d="M0 0h24v24H0z" fill="none" />
                  <path d="M19.5 7a9 9 0 0 0 -7.5 -4a8.991 8.991 0 0 0 -7.484 4" />
                  <path d="M11.5 3a16.989 16.989 0 0 0 -1.826 4" />
                  <path d="M12.5 3a16.989 16.989 0 0 1 1.828 4" />
                  <path d="M19.5 17a9 9 0 0 1 -7.5 4a8.991 8.991 0 0 1 -7.484 -4" />
                  <path d="M11.5 21a16.989 16.989 0 0 1 -1.826 -4" />
                  <path d="M12.5 21a16.989 16.989 0 0 0 1.828 -4" />
                  <path d="M2 10l1 4l1.5 -4l1.5 4l1 -4" />
                  <path d="M17 10l1 4l1.5 -4l1.5 4l1 -4" />
                  <path d="M9.5 10l1 4l1.5 -4l1.5 4l1 -4" />
                </>
              </svg>
              Ir al sitio web
            </LinkButton>
          )}
        </footer>
      </article>
    ))
  }
</section>
