---
import GitHub from "./icons/GitHub.astro";
import NextJS from "./icons/NextJS.astro";
import Tailwind from "./icons/Tailwind.astro";
import React from "./icons/React.astro";
import Node from "./icons/Node.astro";
import Bootstrap from "./icons/Bootstrap.astro";
import Mongo from "./icons/Mongo.astro";
import LinkButton from "./LinkButton.astro";
import Nestjs from "./icons/Nestjs.astro";
import GraphQL from "./icons/Graphql.astro";
import Prisma from "./icons/Prisma.astro";
import Postgresql from "./icons/Postgresql.astro";
import Openai from "./icons/OpenAi.astro";
import Python from "./icons/Python.astro";
import AWS from "./icons/AWS.astro";
import ChromaDB from "./icons/ChromaDB.astro";
import COBOL from "./icons/COBOL.astro";

const TAGS = {
  NEXT: {
    name: "Next.js",
    class: "bg-black text-white",
    icon: NextJS,
  },
  TAILWIND: {
    name: "Tailwind",
    class: "bg-[#003159] text-white",
    icon: Tailwind,
  },
  BOOTSTRAP: {
    name: "Bootstrap CSS",
    class: "bg-[#003159] text-white",
    icon: Bootstrap,
  },
  REACT: {
    name: "React JS",
    class: "bg-[#003159] text-white",
    icon: React,
  },
  EXPRESS: {
    name: "Express JS",
    class: "bg-[#003159] text-white",
    icon: Node,
  },
  MONGODB: {
    name: "Mongo DB",
    class: "bg-[#003159] text-white",
    icon: Mongo,
  },
  NESTJS: {
    name: "NestJs",
    class: "bg-[#003159] text-white",
    icon: Nestjs,
  },
  GRAPHQL: {
    name: "GraphQL",
    class: "bg-[#003159] text-white",
    icon: GraphQL,
  },
  PRISMA: {
    name: "Prisma",
    class: "bg-green-950 text-white",
    icon: Prisma,
  },
  POSTGRESQL: {
    name: "PostgreSQL",
    class: "bg-black text-white",
    icon: Postgresql,
  },
  OPENAI: {
    name: "OpenAI",
    class: "bg-black text-white",
    icon: Openai,
  },
  PYTHON: {
    name: "Python",
    class: "bg-blue-600 text-white",
    icon: Python,
  },
  AWS: {
    name: "AWS",
    class: "bg-orange-600 text-white",
    icon: AWS,
  },
  CHROMADB: {
    name: "ChromaDB",
    class: "bg-purple-600 text-white",
    icon: ChromaDB,
  },
  COBOL: {
    name: "COBOL",
    class: "bg-gray-700 text-white",
    icon: COBOL,
  },
};
const PROJECTS = [
  {
    title: "Qwerty App - Sistema de Gestión de Ventas",
    description: `Sistema empresarial de gestión de ventas desarrollado con arquitectura moderna y optimización de base de datos. 

Implementé una solución escalable con React Native y Supabase, enfocándome en la optimización de consultas y rendimiento de la base de datos en tiempo real. 

El sistema incluye gestión de inventarios, estadísticas avanzadas y reportes automáticos, aplicando mis 20+ años de experiencia en optimización de bases de datos y desarrollo de sistemas productivos para pequeños y medianos comercios.`,
    link: "#",
    image: "/projects/querty.webp",
    tags: [TAGS.NEXT, TAGS.TAILWIND, TAGS.PRISMA, TAGS.POSTGRESQL],
  },
  {
    title: "COBOL-GPT - Documentador Inteligente con IA",
    description: `Herramienta empresarial de documentación automática para sistemas COBOL legacy, desarrollada durante mi rol actual en Automóviles San Jorge.

Implementé una solución completa con RAG (Retrieval-Augmented Generation), embeddings vectoriales y ChromaDB para analizar código COBOL de más de 30 años de antigüedad.

La solución incluye agentes autónomos personalizados, integración con OpenAI API, y un sistema de recuperación de información que ha reducido en 80% el tiempo de documentación de sistemas legacy, facilitando el mantenimiento y comprensión del código.`,
    link: "#",
    image: "/projects/cobol-gpt.webp",
    tags: [
      TAGS.NEXT,
      TAGS.TAILWIND,
      TAGS.PRISMA,
      TAGS.POSTGRESQL,
      TAGS.OPENAI,
      TAGS.NESTJS,
      TAGS.CHROMADB,
      TAGS.COBOL,
    ],
  },
  {
    title: "NestJS Auth Base - Arquitectura de Autenticación Empresarial",
    description: `Framework de autenticación robusto desarrollado con arquitectura híbrida REST/GraphQL, implementando mejores prácticas de seguridad empresarial.

Diseñé una solución escalable con JWT, confirmación de email, validación de usuarios y gestión de roles utilizando TypeORM y PostgreSQL con optimización avanzada de queries.

El sistema incluye middleware de seguridad, hash de contraseñas con salt, rate limiting y auditoría completa, aplicando patrones de arquitectura limpia y principios SOLID para entornos productivos.`,
    link: "#",
    github: "https://github.com/andresfrei/nestjs-auth-base",
    image: "/projects/nest-auth-base.webp",
    tags: [TAGS.NESTJS, TAGS.GRAPHQL, TAGS.POSTGRESQL, TAGS.PRISMA],
  },
  {
    title: "LocalTalent - Plataforma de Servicios con Sistema de Matching",
    description: `Plataforma empresarial de servicios con algoritmo de matching inteligente y sistema de calificaciones bidireccional.

Desarrollé la arquitectura de base de datos optimizada para búsquedas geoespaciales, implementando índices complejos y queries optimizadas para manejar miles de usuarios concurrentes.

El sistema incluye autenticación segura, gestión de pagos, notificaciones en tiempo real y analytics avanzados. Proyecto colaborativo donde lideré el diseño de la arquitectura de datos y optimización de rendimiento.`,
    link: "#",
    github: "https://github.com/andresfrei/local-talent",
    image: "/projects/localtalent.webp",
    tags: [TAGS.REACT, TAGS.TAILWIND, TAGS.EXPRESS, TAGS.MONGODB],
  },
  {
    title: "QuizWiz - Sistema de Gestión de Formularios Empresariales",
    description: `Sistema de recopilación y análisis de datos empresariales con capacidades de reporting avanzado y dashboard ejecutivo.

Implementé una arquitectura escalable para manejar formularios complejos con validaciones dinámicas, almacenamiento optimizado y generación de reportes en tiempo real.

La solución incluye export a múltiples formatos, análisis estadístico automático y integración con herramientas de BI, facilitando la toma de decisiones basada en datos para equipos de trabajo.`,
    github: "https://github.com/andresfrei/s11-12-n-java-next",
    image: "/projects/quizwiz.webp",
    link: "#",
    tags: [TAGS.NEXT, TAGS.TAILWIND, TAGS.POSTGRESQL],
  },
];
---

<section class="flex flex-col gap-y-16">
  {
    PROJECTS.map(({ image, title, description, tags, link, github }) => (
      <article>
        <h3 class="text-2xl font-semibold text-yellow-800 dark:text-yellow-200 mb-2">
          {title}
        </h3>
        <p class="text-lg mb-4 text-pretty">{description}</p>
        <ul class="flex gap-x-2 flex-row mb-2">
          {tags.map((tag) => (
            <li>
              <span
                class={`flex gap-x-2 rounded-full text-xs ${tag.class} py-1 px-2 `}
              >
                <tag.icon class="size-4" />
                {tag.name}
              </span>
            </li>
          ))}
        </ul>
        <img
          loading="lazy"
          class="rounded shadow-2xl shadow-white/10 aspect-video"
          src={image}
          alt={`Captura de pantalla del proyecto ${image}`}
        />
        <footer class="flex gap-x-4 items-end justify-start mt-4">
          {github && (
            <LinkButton href={github} target="_blank">
              <GitHub class="size-6" />
              Ver código fuente
            </LinkButton>
          )}
          {link && link !== "#" && (
            <LinkButton href={link} target="_blank">
              <svg
                width="24"
                height="24"
                viewBox="0 0 24 24"
                stroke-width="1.5"
                stroke="currentColor"
                fill="none"
                stroke-linecap="round"
                stroke-linejoin="round"
              >
                <path stroke="none" d="M0 0h24v24H0z" fill="none" />
                <path d="M19.5 7a9 9 0 0 0 -7.5 -4a8.991 8.991 0 0 0 -7.484 4" />
                <path d="M11.5 3a16.989 16.989 0 0 0 -1.826 4" />
                <path d="M12.5 3a16.989 16.989 0 0 1 1.828 4" />
                <path d="M19.5 17a9 9 0 0 1 -7.5 4a8.991 8.991 0 0 1 -7.484 -4" />
                <path d="M11.5 21a16.989 16.989 0 0 1 -1.826 -4" />
                <path d="M12.5 21a16.989 16.989 0 0 0 1.828 -4" />
                <path d="M2 10l1 4l1.5 -4l1.5 4l1 -4" />
                <path d="M17 10l1 4l1.5 -4l1.5 4l1 -4" />
                <path d="M9.5 10l1 4l1.5 -4l1.5 4l1 -4" />
              </svg>
              Ir al sitio web
            </LinkButton>
          )}
        </footer>
      </article>
    ))
  }
</section>
